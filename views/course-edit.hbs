<h1>Edit {{course.title}}</h1>

<form action='/courses/edit' method='POST' class="course-edit-form">
  <div class='input-field'>
    <input id='title' name='title' type='text' class='validate' required value='{{course.title}}' />
    <label for='title'>Course Name</label>
    <span class='helper-text' data-error='enter course name'></span>
  </div>

  <div class='input-field'>
    <input id='price' name='price' type='number' class='validate' required min='1' value='{{course.price}}' />
    <label for='price'>Course Price</label>
    <span class='helper-text' data-error='enter price'></span>
  </div>

  <div class='input-field'>
    <input id='img' name='img' type='text' class='validate' required value='{{course.img}}' />
    <label for='img'>URL Image</label>
    <span class='helper-text' data-error='enter image url'></span>
  </div>

  <input type='hidden' name='_id' value='{{course._id}}' />

  <button type='submit' class='btn btn-primary'>Edit Course</button>

</form>

<form action='/courses/delete' method='POST'>
  <input type='hidden' name='_id' value='{{course._id}}' />

  <button type='submit' class='btn red'>Delete Course</button>
</form>